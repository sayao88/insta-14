<%= notice %>

<%= form_for(@picture, url:choose_new_or_edit_picture) do |f| %>
    <%= f.error_messages! %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <br>

    <% if @picture.img %>
        <p><%= image_tag(@picture.img) %></p>
    <% end %>
    <% if action_name == 'edit' %>
        <p class="text-left">画像変更する場合は画像を選択してください。</p>
    <% end %>
    <%= f.file_field :img %>
    <%= f.hidden_field :img_cache %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <% # f.hidden_field :avatar_cache %>
    <br>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧に戻る", root_path, class: 'btn btn-default' %>